        <stateTransitions>
            <stateTransition name="Button 1">
                <LogicalExpression>
                    <performanceNode name="button 1 was pressed" nodeId="2">
                        <current>AtExpectation</current>
                    </performanceNode>
                </LogicalExpression>
                <strategyChoices>
                    <strategyRef name="Button 1"/>
                </strategyChoices>
            </stateTransition>
            <stateTransition name="Button 2">
                <LogicalExpression>
                    <performanceNode name="button 2 was pressed" nodeId="3">
