<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Scenario xmlns:ns2="http://GIFT.com/common" xmlns:ns3="http://GIFT.com/learnerActions" xmlns:ns4="http://GIFT.com/pedagogicalStrategy" name="multi-user-course" version="11.0.1">
    <description>This is the STEEL-ARTT course that allows multiple players to join and participate together.</description>
    <resources>
        <AvailableLearnerActions/>
    </resources>
    <assessment>
        <tasks>
            <task name="Application Completed task" nodeId="1">
                <startTriggers>
                    <trigger>
                        <scenarioStarted/>
                        <triggerMessage>
                            <strategy name="TaskTriggerStrategy">
                                <ns4:instructionalIntervention>
                                    <ns4:strategyHandler>
                                        <ns4:impl>domain.knowledge.strategy.DefaultStrategyHandler</ns4:impl>
                                    </ns4:strategyHandler>
                                    <ns4:delayAfterStrategy>
                                        <ns4:duration>5</ns4:duration>
                                    </ns4:delayAfterStrategy>
                                    <ns4:feedback>
                                        <ns4:message>
                                            <ns4:content>Welcome to the multi-user course. Please wait for all team members to join before continuing.</ns4:content>
                                            <ns4:Delivery>
                                                <ns4:InTutor>
                                                    <ns4:TextEnhancement>FlashOnly</ns4:TextEnhancement>
                                                    <ns4:MessagePresentation>TextOnly</ns4:MessagePresentation>
                                                </ns4:InTutor>
                                            </ns4:Delivery>
                                        </ns4:message>
                                    </ns4:feedback>
                                </ns4:instructionalIntervention>
                            </strategy>
                        </triggerMessage>
                    </trigger>
                </startTriggers>
                <endTriggers>
                    <trigger>
                        <childConceptEnded nodeId="2"/>
                    </trigger>
                </endTriggers>
                <concepts>
                    <concept name="Application Completed" nodeId="2">
                        <conditions>
                            <condition>
                                <conditionImpl>domain.knowledge.condition.ApplicationCompletedCondition</conditionImpl>
                                <input>
                                    <ApplicationCompletedCondition/>
                                </input>
                            </condition>
                        </conditions>
                    </concept>
                </concepts>
            </task>
        </tasks>
        <objects/>
    </assessment>
    <actions>
        <stateTransitions/>
        <instructionalStrategies/>
    </actions>
    <teamOrganization>
        <team name="Everyone">
                    <teamMember name="Prioritizer" playable="true">
                        <learnerId>
                            <entityMarking>104</entityMarking>
                        </learnerId>
                    </teamMember>
                    <teamMember name="Stabilizer" playable="true">
                        <learnerId>
                            <entityMarking>105</entityMarking>
                        </learnerId>
                    </teamMember>
                    <teamMember name="Medical Supplier" playable="true">
                        <learnerId>
                            <entityMarking>106</entityMarking>
                        </learnerId>
                    </teamMember>
        </team>
    </teamOrganization>
</Scenario>