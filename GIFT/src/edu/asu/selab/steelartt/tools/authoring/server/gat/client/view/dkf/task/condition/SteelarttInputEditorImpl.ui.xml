<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:shared="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.dkf.shared">
  <ui:style>  
    .padTop {
      padding-top: 5px;
    }
    .padBottom {
      margin-bottom: 10px;
    }
    .smallText {
      font-size: 90%;
      color: #555;
    }
  </ui:style>
  
  <g:HTMLPanel addStyleNames="{style.padTop}">
    <g:FlowPanel addStyleNames="{style.padBottom}">
      <g:HTML>
        This Steelartt condition gets woundIdentified triage information.
      </g:HTML>
    </g:FlowPanel>
    
    <g:CheckBox ui:field="woundIdentifiedCheck" 
                text="Wound Identified" 
                addStyleNames="{style.padBottom}" />
    
    <shared:EditableTeamPicker label="Learner roles that should be assessed:" 
                                 ui:field="teamPicker" 
                                 addStyleNames="{style.padBottom}" />
  </g:HTMLPanel>
</ui:UiBinder>
