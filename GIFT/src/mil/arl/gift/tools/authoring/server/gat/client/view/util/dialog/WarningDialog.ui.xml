<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.contentContainer{
			max-width: 700px;
		}
		.htmlMessage{
			padding: 5px 0px;
		}
	</ui:style>	           
      <b:Row>
       	<b:Column size="MD_12">	             
       		<g:HorizontalPanel addStyleNames='{style.contentContainer}' spacing='0' horizontalAlignment='ALIGN_CENTER' verticalAlignment='ALIGN_MIDDLE'>
        		<g:HorizontalPanel verticalAlignment='ALIGN_MIDDLE'>
        			<g:SimplePanel ui:field='iconContainer'/>
        			<g:HTML addStyleNames='{style.htmlMessage}' ui:field='htmlMessage'/>
        		</g:HorizontalPanel>
       		</g:HorizontalPanel>
		</b:Column>
	</b:Row>
		
</ui:UiBinder> 