<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:widgets="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.learner.widgets">
	
	<ui:style>	
		.padBottom{
			margin-bottom: 10px;
		}
		.smallPadBottom{
			margin-bottom: 5px;
		}	
	</ui:style>
	
	<g:FlowPanel width="100%">
	
		<g:HTML addStyleNames='{style.smallPadBottom}'>
			Which classifier can consume the incoming translated data in order to calculate both short and long term learner state?
		</g:HTML>
		<g:FlowPanel width='100%' addStyleNames='{style.padBottom}'>
		
			<widgets:ClassifierValueListBox width="100%" ui:field="classifierValueListBox"/>
			
		</g:FlowPanel>
		
	</g:FlowPanel>
	
</ui:UiBinder> 