<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ta="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.course.ta"
	xmlns:guidance="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.course.guidance">
	
	<ui:style>
		.pad{
			padding: 10px;
		}
		.padTop{
			margin-top: 5px;
		}
		.smallPadBottom{
			margin-bottom: 5px;
		}
		.padBottom{
			margin-bottom: 10px;
		}
		.largePadBottom{
			margin-bottom: 20px;
		}
		.tabbed{
			padding: 0px 30px;
		}
		.cellTableBorder{
			border-style: solid;
			border-Width: 1px;
			border-color: rgb(185,185,185);
			border-radius: 3px;
			box-shadow: 3px 3px 5px rgba(0,0,0,0.2);
			background-color: rgb(250,250,250);
		}
		.inline{
			display: inline;
		}
		.smallPad{
			margin: 5px;
		}
	</ui:style>

	<g:HTMLPanel>
		
		<ta:TrainingAppInteropEditor titleAuthorable="true" metadataModeEnabled='true' ui:field='taInteropEditor'/>
		
		<guidance:OptionalGuidanceCreator addStyleNames='{style.padTop} {style.padBottom}' ui:field='applicationGuidanceCreator'>							
			Show message while training application loads
		</guidance:OptionalGuidanceCreator>
		
	</g:HTMLPanel>
</ui:UiBinder> 