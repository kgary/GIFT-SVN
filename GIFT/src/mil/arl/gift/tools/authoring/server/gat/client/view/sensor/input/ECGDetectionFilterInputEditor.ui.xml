<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.pad{
			padding: 15px;
		}	
		.padSides{
			padding: 0px 5px;
		}
		.padTop{
			margin-top: 5px;
		}
		.padBottom{
			margin-bottom: 10px;
		}
		.smallPadBottom{
			margin-bottom: 5px;
		}
		.tabbed{
			margin-left: 30px;
		}		
		.doubleTabbed{
			margin-left: 60px;
		}
		.rightTabbed{
			padding-right: 30px;
		}
		.rightDoubleTabbed{
			padding-right: 60px;
		}
		.textBoxPad{
			padding: 7px 5px !important; /* Nick: Marking as important since something higher up seems to screw up the padding */
		}
		.grayBorder{
			border-style: solid;
			border-Width: 1px;
			border-color: rgb(150,150,150);
		}
		.minWidth{
			min-width: 400px;
		}
		.cellTableBorder{
			border-style: solid;
			border-Width: 1px;
			border-color: rgb(185,185,185);
			border-radius: 3px;
			box-shadow: 3px 3px 5px rgba(0,0,0,0.2);
			background-color: rgb(250,250,250);
		}
	</ui:style>
	
	<g:FlowPanel width="100%">
	
		<g:HTML addStyleNames='{style.smallPadBottom}'>
			Sample Rate (Hz):<span style='color: red; font-weight: bold;'>*</span>
		</g:HTML>
		<g:FlowPanel addStyleNames='{style.tabbed} {style.padBottom}'>
			<g:IntegerBox addStyleNames='{style.textBoxPad}' width="100%" ui:field="sampleRateIntegerBox" />
		</g:FlowPanel>
		
		<g:HTML addStyleNames='{style.smallPadBottom}'>
			Window Size:<span style='color: red; font-weight: bold;'>*</span>
		</g:HTML>
		<g:FlowPanel addStyleNames='{style.tabbed} {style.padBottom}'>
			<g:IntegerBox addStyleNames='{style.textBoxPad}' width="100%" ui:field="windowSizeIntegerBox" />	
		</g:FlowPanel>	
		
	</g:FlowPanel>
	
</ui:UiBinder> 