<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:w="urn:import:mil.arl.gift.common.gwt.client.widgets"
    xmlns:condition.common="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.dkf.task.condition.common"
    xmlns:shared="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.dkf.shared">
    <ui:style>
        .numberSpinner {
            margin: 5px 0px;
            min-width: 75px;
            vertical-align: middle;
        }
        .teamPicker{
            margin-top: 20px;
        }
    </ui:style>

	<g:HTMLPanel>
	
	    <div>
	       Distance that the learner should travel: <w:DecimalNumberSpinner ui:field="distanceTextBox" addStyleNames="{style.numberSpinner}" /> meter(s)
	    </div>
	    
	    <div>
	       Threshold distance: <w:DecimalNumberSpinner ui:field="thresholdTextBox" addStyleNames="{style.numberSpinner}" /> meter(s)
	    </div>
	    
	    <shared:TeamMemberPicker label='Learners role that should be assessed:' addStyleNames='{style.teamPicker}' ui:field='teamMemberPicker' />
	    
	</g:HTMLPanel>

</ui:UiBinder> 