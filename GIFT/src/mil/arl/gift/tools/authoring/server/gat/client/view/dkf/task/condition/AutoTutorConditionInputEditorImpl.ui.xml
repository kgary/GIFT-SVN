<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ta="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.course.ta"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>	
		.pad{
			padding: 10px;
		}
		.padTop{
			padding-top: 5px;
		}
		.smallPadBottom{
			margin-bottom: 5px;
		}
		.padBottom{
			margin-bottom: 10px;
		}
		.largePadBottom{
			margin-bottom: 20px;
		}
		.tabbed{
			padding: 0px 30px;
		}

		.rightButton {
			padding-bottom: 3px; 
			margin-top: 2px; 
			margin-right: -20px
		}
		.bold{
            font-weight: bold;
        }
        .padSides{
            padding: 0px 5px;
        }
        .selectButton{
            border-style: dashed;
            border-radius: 6px;
            padding: 6px 30px;
            border-color: rgb(138, 153, 169);
            color: #3E4F63;
        }
        .inline{
			display: inline;
		}
		.smallPadLeft{
            margin-left: 5px;
        }
        .pointer{
            cursor: pointer;
        }
	</ui:style>

	<g:HTMLPanel addStyleNames='{style.padTop}'>

		  <g:FlowPanel addStyleNames='{style.tabbed}'>
			  <g:FlowPanel addStyleNames='{style.padTop} {style.smallPadBottom}'>
				  <g:FlowPanel addStyleNames='{style.smallPadBottom}'>				      		
					  <g:HTML>
						  This condition should specify its AutoTutor parameters using...
					  </g:HTML>
				  </g:FlowPanel>
				  
			  <ta:RealTimeAssessmentPanel ui:field="skoSelectPanel"></ta:RealTimeAssessmentPanel>
				  
		  </g:FlowPanel>
	  </g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 