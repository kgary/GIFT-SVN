<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
    <ui:style>
		.wellStyle {
            margin-left:-15px;
            margin-right:-15px;
        }
        
        .buttonStyle {
            text-align: center;
            width: 100%;
            max-width: 250px;
            margin:10px;
            white-space: normal; /* Keeps text from overflowing at lower resolutions*/
        }
        .centerAlign {
           text-align:center;
        }
        
        .leftAlign {
           text-align:left;
        }
        
        .rightAlign {
           text-align:right;
        }
        
        .buttonMargin {
           margin-right:10px;
        }
        
        .collapseStyle {
           margin-right:10px;
           width:32px;
        }
	</ui:style>
    
   
    <b:Container fluid="true" ui:field="mainContainer">
        <b:Panel type="PRIMARY">
            <b:PanelHeader>
                <b:Row>
                    <b:Column size="XS_4">
                        <b:Heading size="H4" text="Select a Survey Item..."/>
                    </b:Column>
                    <b:Column size="XS_8" addStyleNames="{style.rightAlign}">
                        <b:Button type="PRIMARY" icon="TIMES" ui:field="closeButton"></b:Button>
                    </b:Column>
                </b:Row>
                
            </b:PanelHeader>
        
            <b:PanelBody>
                <b:Row>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="LIST" addStyleNames="{style.buttonStyle}" ui:field="mcButton">Multiple Choice</b:Button>
                    </b:Column>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="TABLE" addStyleNames="{style.buttonStyle}" ui:field="mocButton">Matrix of Choices/Matching</b:Button>
                    </b:Column>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="SLIDERS" addStyleNames="{style.buttonStyle}" ui:field="sbButton">Slider Bar</b:Button>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="CHECK" addStyleNames="{style.buttonStyle}" ui:field="tfButton">True/False</b:Button>
                    </b:Column>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="STAR_HALF_FULL" addStyleNames="{style.buttonStyle}" ui:field="rsButton">Rating Scale</b:Button>
                    </b:Column>
                   <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="PENCIL_SQUARE_O" addStyleNames="{style.buttonStyle}" ui:field="frButton">Free Response</b:Button>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="XS_4" addStyleNames="{style.centerAlign}">
                        <b:Button type="PRIMARY" icon="COPY" addStyleNames="{style.buttonStyle}" ui:field="copyButton">From Another Survey</b:Button>
                    </b:Column>
                </b:Row>
             </b:PanelBody>
         </b:Panel>
        
        
        
    </b:Container>
    
</ui:UiBinder> 
