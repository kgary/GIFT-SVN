<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:summer="urn:import:org.gwtbootstrap3.extras.summernote.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
    <ui:style>
    	.answerSetCheckbox {
			margin-top: 4px;
			margin-bottom: 4px;
    	}
	</ui:style>
    
   
    <b:Container fluid="true">
    
        <b:CheckBox ui:field="randomizeAnswersCheckBox" addStyleNames='{style.answerSetCheckbox}'>
        	Randomize choices when presented
        </b:CheckBox>
        <b:CheckBox ui:field="existingAnswerSetCheckBox" addStyleNames='{style.answerSetCheckbox}'>
        	Use Existing Answer Set
        </b:CheckBox>
        <b:Collapse toggle="false" ui:field="answerSetCollapse">
        	<b:ValueListBox ui:field="answerSetListBox"/>
        </b:Collapse>
    </b:Container>
    
</ui:UiBinder> 
