<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:cb="urn:import:mil.arl.gift.common.gwt.client.widgets.bootstrap">
	
    <ui:style>
		.container{
			
		}
		.responseContainer{
			overflow: auto;
			padding: 5px;
		}
        .labelStyle {
            text-align: center; 
            padding-right: 20px; 
            padding-left: 20px;
        }
        
        .headerContainer{
			margin-bottom: 5px;
            margin-left:-10px;
		}
	</ui:style>
    
   
    <b:Container addStyleNames='{style.container}' fluid="true">
    
        <b:Container addStyleNames='{style.headerContainer}' ui:field="pointHeader" fluid="true">
            <b:Label addStyleNames='{style.labelStyle}' >Enter Point Values Below</b:Label>        
        </b:Container>
        <b:Container fluid="true">
        	<g:Grid ui:field='choicesContainer'>
	        	<!-- Responses go here -->
	        </g:Grid>
        </b:Container>
        
    </b:Container>
    
</ui:UiBinder> 
