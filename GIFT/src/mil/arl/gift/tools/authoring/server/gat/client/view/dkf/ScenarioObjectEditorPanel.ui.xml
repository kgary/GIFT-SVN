<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cw="urn:import:mil.arl.gift.common.gwt.client.widgets"
	xmlns:cwb="urn:import:mil.arl.gift.common.gwt.client.widgets.bootstrap"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	.mainPanel {
		
	}
	
	.header {
		border-bottom: 1px solid #ddd;
		margin-bottom: -1px;
		margin-top: 5px;
	}
	
	.nameTab {
		width: 100%;
		padding: 2px 6px 5px;
		background-color: white;
		border: 1px solid #ddd;
		border-bottom-color: white;
		border-top-left-radius: 5px;
		border-top-right-radius: 5px;
	}
	
	.removeButton {
		border-radius: 50%;
		border: none;
		padding: 0px;
		width: 20px;
		height: 20px;
		vertical-align: auto;
		margin-left: 1px;
	}
	
	.pinButton {
		border-radius: 50%;
		border: none;
		padding: 0px;
		width: 20px;
		height: 20px;
		vertical-align: auto;
		margin-left: 1px;
	}
	
	.pinButton i {
		transform: rotate(45deg);
	}
	
	@external active;
	.active.pinButton {
		border: 1px solid rgb(150, 150, 150)
	}
	
	.editorDeck {
		background-color: white;
		border-right: 1px solid rgb(150,150,150);
		border-bottom: 1px solid rgb(150,150,150);
	}
	
	.tabButton {
		border-bottom-left-radius: 0px;
		border-bottom-right-radius: 0px;
		border-top-left-radius: 5px;
		border-top-right-radius: 5px;
		padding-top: 5px;
		padding-bottom: 7px;
		padding-right: 5px;
		padding-left: 5px;
		vertical-align: auto;
		background-color: rgb(245, 245, 245);
	}
	
	.layoutButton {
		padding: 0px 4px 1px;
	}
	
	.fullScreenButton {
		padding: 0px 4px 1px;
		margin-right: 4px;
	}
	
	.objectIcon {
		margin-right: 5px;
	}
	
	.layoutPanel {
		margin-bottom: 5px;
		overflow: auto;
		padding: 3px;
		background: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.50));
	}
	
	.nameLabel {
		padding: 3px;
		border: none;
		box-shadow: none;
		height: auto;
	}
	
	.nameLabel:hover {
		box-shadow: 0px 0px 5px rgba(0, 0, 255, 0.5);
	}
	
	.tabPanel {
		padding: 0px 5px;
		overflow-x: auto;
	}
	
	.scrolls {
		overflow: auto;
	}
	
	.loadingPanel {
		position: absolute;
		top: 0px;
		left: 0px;
		right: 0px;
		bottom: 0px;
		width: 100%;
		height: 100%;
		background-color: rgb(255, 255, 255);
		text-align: center;		
	}
	
	.loadingIndicator {
		font-size: 20px;
		font-weight: bold;
		padding: 20px;
	}
	
	.loadingText {
		margin-left: 5px;
	}
	
	</ui:style>
	<g:SimpleLayoutPanel addStyleNames='{style.mainPanel}'>
		<g:HeaderPanel ui:field='mainPanel'>

			<g:FlowPanel addStyleNames='{style.header}'>
			
				<g:HTMLPanel addStyleNames='{style.tabPanel}'>
					<table style='width: 100%'>
						<tr style='width: 100%'>
							<td style='width: 1%'>
								<g:HorizontalPanel ui:field="tabsPanel">
								</g:HorizontalPanel>
							</td>
							<td>
								<b:Tooltip title='Show pinned objects' placement='BOTTOM' ui:field='tabMenuTooltip'>
									<b:Button visible='false' addStyleNames='{style.tabButton}'
										type='DEFAULT' icon='ANGLE_DOUBLE_RIGHT' ui:field='tabButton' />
								</b:Tooltip>
							</td>
						</tr>
					</table>
				</g:HTMLPanel>
			</g:FlowPanel>

			<g:FlowPanel width='100%' height='100%'
				addStyleNames='{style.scrolls} {style.editorDeck}'>

				<g:DeckPanel width='100%' height='100%' ui:field='editorDeck'>
					<!-- Course object editors go here -->
				</g:DeckPanel>

				<g:VerticalPanel visible='false' horizontalAlignment='ALIGN_CENTER'
						addStyleNames='{style.loadingPanel}' ui:field='loadingIndicator'>

					<g:FlowPanel addStyleNames='{style.loadingIndicator}'>
					
						<cwb:BsLoadingIcon ui:field='loadingIcon'/>
						
						<g:InlineHTML addStyleNames='{style.loadingText}' ui:field='loadingText'>
							Loading...
						</g:InlineHTML>
						
					</g:FlowPanel>
					
				</g:VerticalPanel>		

			</g:FlowPanel>

		</g:HeaderPanel>
	</g:SimpleLayoutPanel>
</ui:UiBinder> 