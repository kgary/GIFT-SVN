<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:shared="urn:import:mil.arl.gift.tools.authoring.server.gat.client.view.dkf.shared">
	<ui:style>
	   .padBottom{
            margin-bottom: 10px;
       }
	</ui:style>
	<g:HTMLPanel>
	   <table class='{style.padBottom}' style='width: 100%;'>
	       <tr style='width: 100%;'>
	           <td>
	               <g:Widget ui:field='icon'/>
               </td>
               <td style='width: 100%;'>
                   <b:TextBox placeholder='Place name' ui:field='nameBox'/>
               </td>
	       </tr>
	   </table>
	   <shared:WrapButton addStyleNames='{style.padBottom}' ui:field='wrapButton'/>
       <shared:ScenarioCoordinateEditor addStyleNames='{style.padBottom}' ui:field="coordinateEditor" width="auto" />
	</g:HTMLPanel>
</ui:UiBinder> 