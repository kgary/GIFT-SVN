<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type="mil.arl.gift.tools.authoring.server.gat.client.view.dkf.shared.Ribbon.Style">
        .thumbnailContainer {
            text-align: center;
            background-color: rgba(0, 0, 0, 0.25);
            padding: 5px;
            border: inset 2px rgba(0, 0, 0, 0.25);
            border-radius: 5px;
        }
        .thumbnailFlowPanel {
            display: inline-block;
            margin: 5px 5px;
            vertical-align: middle;
        }
        .noTileLabel{
			background-color: transparent;
			color:black;
			font-size:large;
		}
        .thumbnailPanel {
            text-align: center;
            position: relative;
            box-shadow: 5px 5px 5px #888888;
            margin-bottom: 0px;
            white-space: normal;
        }
        .iconBorder {
            padding: 10px;
            border: 1px solid rgb(200, 200, 200);
            box-shadow: 2px 2px 3px rgb(150, 150, 150);
            border-radius: 50%;
            display: inline-block;
        }
        .tileCaption{
            padding:4px !important;
        }
        .caption {
            margin: 0px;
            font-size: 18px !important;
            padding-right:0px;
            padding-left:0px;
        }
        .addButtonWidth{
            width:100px;
            left: literal("calc(50% - 50px)");
        }
    </ui:style>

    <g:FlowPanel ui:field='ribbonPanel' addStyleNames='{style.thumbnailContainer}' />

</ui:UiBinder> 