<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:summer="urn:import:org.gwtbootstrap3.extras.summernote.client.ui"
    xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	
    <ui:style>
		.scaleButtons {
			margin: -5px 0px 0px;
		}
	</ui:style>
   
    <b:Container fluid="true">
       
        
        <b:FormGroup>
            <b:FormLabel>Scale Appearance</b:FormLabel>
            <g:FlowPanel addStyleNames="col-lg-12 {style.scaleButtons}">
                <b:InlineRadio name="layoutRadio" text="Radio" ui:field='radioOption'/>
                <b:InlineRadio name="layoutRadio" text="Bar" ui:field='barOption'/>
            </g:FlowPanel>
        </b:FormGroup>
        
    </b:Container>
    
</ui:UiBinder> 
