<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
		.mainNavBar{
	        margin: 0px;
			border-radius: 0px;
		}
		.goodStatus{
		    display: inline-block;
		    padding: 3px 10px;
		    color: white;
		    background-image: linear-gradient(lightGreen, green);
		    border-radius: 20px;
		    border: 1px solid rgb(150, 150, 150);	
		}
		.statusText{
		    display: inline-block;
		    margin-right: 5px;
		}
		.statusPanel{
			display: inline-block;
			margin-right: 10px;
			margin-left: 10px;
		    padding: 3px 3px 3px 10px;
		    border-radius: 20px;
		    border: 1px outset white;
		    margin-top: 8px;
		}				
		.overflowText {
			position: absolute;
			left: 62px;
		}
		.headerText {
            color: white;
		}
	</ui:style>
        <b:Navbar ui:field="navBar" type="INVERSE" addStyleNames="{style.mainNavBar} navBarZOrder headerBar">
            <b:Container width="100%" fluid="true">
                <b:NavbarHeader>
                    <b:NavbarBrand ui:field="navBarHeader">
                    </b:NavbarBrand>
                    <b:NavbarText pull="LEFT" addStyleNames='{style.overflowText}'>
	                    <!-- the course name field will be filled in dynamically by the java screen code -->
	                    <b.html:Span ui:field='headerText' addStyleNames="{style.headerText}" >GIFT Wrap Home</b.html:Span>                   
	                </b:NavbarText>
                </b:NavbarHeader>
            </b:Container>
        </b:Navbar>

	
</ui:UiBinder> 