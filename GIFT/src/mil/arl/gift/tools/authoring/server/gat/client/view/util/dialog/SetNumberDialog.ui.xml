<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cw="urn:import:mil.arl.gift.common.gwt.client.widgets">
	<ui:style>
		.spinner {
			padding-right: 5px;
			margin-left: 5px;
			margin-right: 5px;
		}
	</ui:style>
	<g:HTMLPanel>
   		<g:HorizontalPanel verticalAlignment='middle' >
			<g:InlineHTML ui:field='numberLabel'/> 
			<cw:NumberSpinner addStyleNames='{style.spinner}' ui:field='numberSpinner'/>
   			<g:InlineHTML ui:field='unitLabel'/>
   		</g:HorizontalPanel>
   		<g:HTML ui:field='additionalInfoLabel' visible='false'/> 
	</g:HTMLPanel>
</ui:UiBinder> 