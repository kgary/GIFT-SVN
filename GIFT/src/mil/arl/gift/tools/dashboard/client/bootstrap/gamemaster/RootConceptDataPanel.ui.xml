<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	   .mainPanel{
	       display: flex;
	       flex: 1;
	       margin: 5px 5px 0px 0px;
	   }
	   .mainPanel > *:last-child{
            margin-right: 0px;
       }
	   .mainPanel > *:first-child > div:first-child{
           border-left: 1px solid rgba(0,0,0,0.3);
           margin-left: -5px;
           padding-left: 5px;
       }
	</ui:style>
	<g:FlowPanel addStyleNames='{style.mainPanel}' ui:field='leafConceptPanel'>
	   <!-- Leaf concepts are displayed here -->
	</g:FlowPanel>
</ui:UiBinder> 