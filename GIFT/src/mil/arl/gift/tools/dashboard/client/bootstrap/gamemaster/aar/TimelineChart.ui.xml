<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.gwtbootstrap3.extras.slider.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
    xmlns:wb="urn:import:mil.arl.gift.common.gwt.client.widgets.bootstrap">
	<ui:style>
	   .timeline{
            display: flex;
            flex-direction: column;
	   }
	   .chartContainer{
            height: 100%;
            overflow: auto;
	   }
	   .labelContainer{
            height: 100%;
            overflow: auto;
	   }
	</ui:style>
	<g:FlowPanel addStyleNames='{style.timeline}'>
	   <g:SplitLayoutPanel width='100%' height='100%' ui:field='chartSplitter'>
	       <g:west size='0'>
	           <g:SimpleLayoutPanel ui:field='labelLayout'>
			       <g:FlowPanel addStyleNames='{style.labelContainer}' ui:field='labelScroller'>
			           <g:FlowPanel ui:field='labelsArea'>
			               <!-- Contents of labels are generated by .java class -->
			           </g:FlowPanel>
			       </g:FlowPanel >
		       </g:SimpleLayoutPanel>
	       </g:west>
	       <g:center>
	           <g:SimpleLayoutPanel ui:field='chartLayout'>
				   <g:FlowPanel addStyleNames='{style.chartContainer}' ui:field='chartScroller'>
				       <g:FlowPanel ui:field='chartArea'>
				           <!-- Contents of chart are generated by .java class -->
				       </g:FlowPanel>
				   </g:FlowPanel>
			   </g:SimpleLayoutPanel>
		   </g:center>
	   </g:SplitLayoutPanel>
	</g:FlowPanel>
</ui:UiBinder> 