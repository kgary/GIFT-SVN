<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.messageText {
			height: 210px;
			padding-top: 10px;
		}
	</ui:style>
	<g:FlowPanel width="55%" height="300px" styleName="contentPanel guidanceText">
		<g:Label styleName="{style.messageText}" ui:field="displayLabel" />
        <g:FlowPanel addStyleNames="right">
            <b:Button width="110px" ui:field="logoutButton" type="PRIMARY" styleName="buttonPadding smallMargin" text="Logout" visible="false"/>
            <b:Button width="110px" ui:field="stopButton"   type="PRIMARY" styleName="buttonPadding smallMargin" text="Stop"/>
            <b:Button width="110px" ui:field="resumeButton" type="PRIMARY" styleName="buttonPadding smallMargin" text="Resume"/>
        </g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 