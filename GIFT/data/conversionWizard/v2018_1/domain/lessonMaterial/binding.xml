<?xml version="1.0" encoding="UTF-8"?> 
<bindings xmlns="http://java.sun.com/xml/ns/jaxb" version="2.1"> 
		  
	<!-- setting value to true will group choice elements into one class attribute vs. one for each choice element -->
	<!-- issue: causes choice elements with cardinality to be a single memeber variable named by concatenating each of the named choices, 
				thats why there are bindings listed on a per node basis in this file -->
    <globalBindings choiceContentProperty="true">
		<serializable uid="123435"/>
    </globalBindings>
		
	<!-- identify the schema location, also maps the xs namespace for xsd node references -->
	<bindings schemaLocation="lessonMaterial.xsd" xmlns:xs="http://www.w3.org/2001/XMLSchema">	

		<!-- change the concatenated name of the media choice -->
		<bindings node="//xs:element[@name='media']//xs:complexType//xs:sequence//xs:choice">
			<property name="mediaTypeProperties"/>
		</bindings>
		
		<bindings node="//xs:element[@name='duration']//xs:complexType//xs:sequence//xs:choice">
			<property name="type"/>
		</bindings>
		
	</bindings>
</bindings>
